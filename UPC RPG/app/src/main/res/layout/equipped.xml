<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_light"
    android:id="@+id/equipped"
    >

    <TextView
        android:id="@+id/characterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:text="Name: " />
    <TextView
        android:id="@+id/characterHP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size"
        android:text="HP: "
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/characterPortrait"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipment:"
        android:textSize="@dimen/text_size"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal" />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Armor:"
            android:textSize="@dimen/text_size"
            android:id="@+id/armorText"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            android:id="@+id/ib"
            android:background="@color/brown"
            android:layout_width="@dimen/box"
            android:layout_height="@dimen/box"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/ib2"
            android:background="@color/brown"
            android:layout_width="@dimen/box"
            android:layout_height="@dimen/box"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/ib3"
            android:background="@color/brown"
            android:layout_width="@dimen/box"
            android:layout_height="@dimen/box"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>

        <ImageButton
            android:id="@+id/ib4"
            android:background="@color/brown"
            android:layout_width="@dimen/box"
            android:layout_height="@dimen/box"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weapons:"
            android:textSize="@dimen/text_size"
            android:id="@+id/weaponText"
            android:layout_gravity="center_horizontal" />
        <ImageButton
            android:id="@+id/ib5"
            android:background="@color/brown"
            android:layout_width="@dimen/box"
            android:layout_height="@dimen/box"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>
        <ImageButton
            android:id="@+id/ib6"
            android:background="@color/brown"
            android:layout_width="@dimen/box"
            android:layout_height="@dimen/box"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>
        </GridLayout>


</LinearLayout>